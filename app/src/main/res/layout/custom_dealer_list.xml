<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dealer_list_border_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:text="shop title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#828282" />

        <LinearLayout
            android:id="@+id/contact_person_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_title">

            <TextView
                android:id="@+id/contact_person_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="C"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/contact_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="contact person"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#555555" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_address_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_person_view">

            <TextView
                android:id="@+id/shop_address_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="A"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="shop address"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#555555" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_address_view">

            <TextView
                android:id="@+id/mobile_number_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="M"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="mobile number"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#555555" />
        </LinearLayout>

        <TextView
            android:id="@+id/shop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:text="shop type"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#A7A7A7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_number_view"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/contact_details_on_map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile_number_view"
                android:layout_weight="1"
                android:background="#F1F0F1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/map_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/show_on_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Show on Map"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <!--<Button
                    android:id="@+id/show_on_map"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:background="#F1F0F1"
                    android:layout_height="wrap_content"
                    android:text="Show on Map" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0059A9"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/caller_icon"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/caller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />

                <!--<Button
                    android:id="@+id/caller"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0059A9"
                    android:text="Call"
                    android:textColor="@color/white" />-->

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>