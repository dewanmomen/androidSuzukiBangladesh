<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_quotation_lauout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/suzuki_blue_color"
        android:text="Request For Quotations"
        android:gravity="left"
        android:layout_marginLeft="-10dp"
        android:padding="10dp"
        android:id="@+id/txt_req_for_quotation" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Name"
        android:singleLine="true"
        android:gravity="center"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textCursorDrawable="@null"
        android:imeOptions="actionNext"
        android:background="@color/line_grey"
        android:id="@+id/txt_name_quo" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/white"
        android:textCursorDrawable="@null"
        android:textColorHint="@android:color/white"
        android:imeOptions="actionNext"
        android:background="@color/line_grey"
        android:id="@+id/txt_email_quo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint="Address"
        android:gravity="center"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textCursorDrawable="@null"
        android:imeOptions="actionNext"
        android:background="@color/line_grey"
        android:id="@+id/txt_address_quo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint="Mobile Number"
        android:singleLine="true"
        android:gravity="center"
        android:inputType="phone"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textCursorDrawable="@null"
        android:imeOptions="actionDone"
        android:background="@color/line_grey"
        android:id="@+id/txt_cell_no_quo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:layout_marginRight="10dp"
        android:text="SUZUKI FS 100"
        android:gravity="center"
        android:background="@drawable/qutation_btn_border"
        android:id="@+id/txt_miles_quo"
        android:textColor="@color/line_grey"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@drawable/qutation_btn_border"
        android:text="150 CC"
        android:id="@+id/txt_cc_quo"
        android:textColor="@color/line_grey"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_say_something_quotation"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/border"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:hint="Say Something..."
        android:singleLine="false"
        android:minLines="5"
        android:imeOptions="actionDone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:id="@+id/quotation_btn_submit"
        android:background="#475CCB"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentRight="true"
     />

</LinearLayout>
</ScrollView>
