<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_user">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/parentSignup"
            >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/s_logo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_holder"
                android:orientation="vertical">
                <!--<ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:inputType="text"
                        android:textColorLink="#FFFFFF"
                        android:drawableLeft="@drawable/name"
                        android:hint="Name"
                        android:textColor="#FFFFFF"
                        android:textColorHighlight="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:imeOptions="actionNext"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/email"
                        android:textColorLink="#FFFFFF"
                        android:drawableLeft="@drawable/email"
                        android:inputType="textEmailAddress"
                        android:hint="Email"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:imeOptions="actionNext"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/password"
                        android:textColorLink="#FFFFFF"
                        android:inputType="textPassword"
                        android:drawableLeft="@drawable/pass"
                        android:hint="Create Password"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:imeOptions="actionNext"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mobile_no"
                        android:textColorLink="#FFFFFF"
                        android:hint="Mobile Number"
                        android:inputType="phone"
                        android:drawableLeft="@drawable/mobile"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:imeOptions="actionNext"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/address"
                        android:textColorLink="#FFFFFF"
                        android:drawableLeft="@drawable/thana"
                        android:hint="Address"
                        android:inputType="text"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:imeOptions="actionNext"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/thana"
                        android:drawableLeft="@drawable/thana"
                        android:hint="Thana"
                        android:inputType="text"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:imeOptions="actionDone"/>

                </LinearLayout>
                <!--</ScrollView>-->

            </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:text="Sign Up"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:id="@+id/button"
                    android:background="@drawable/login_btn_border"
                    android:textColor="#FFFFFF"

                    />
        </LinearLayout>

</ScrollView>
